<h3 class="text-center mt-5"> Open Project </h3>

<form action='/projects' method="post">
  <div class='row'>
    <div class='col-4 offset-md-4'>
      <label for="title">New project name</label>
      <input type="text" name="title" class="form-control">
    </div>
  </div>
  <div class="row">
    <div class="offset-md-6"><button type="submit" class="btn btn-success mt-3">Create Project</button></div>
  </div>
</form>
<% if @projects.any? %>
<ul>
  <% @projects.each do |project| %>
    <li><%= project.title %> </li>
  <% end %>
<% else %>
<h4 class="text-center mt-3">There are no Projects at this time</h4>
<% end %>